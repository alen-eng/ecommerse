<section>
    <div class="container mt-5">
      <div class="row">
        {{#each products}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 16rem; height:15rem;">
            <img  class="card-img-top"
              src="/product-images/{{this.item}}.jpg"
               alt="Card-image-cap"
               style="height: 16rem; width:16rem;">
            <div class="card-body">
              <h5 class="card-title">{{this.product.Name}}</h5>
              <p class="card-text">{{this.product.Category}}</p>
               <p class="card-text">{{this.product.Description}}</p>
              <h4 class="card-text"> INR {{this.product.Price}}</h4>
              {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
              <button onclick="addtoCart('{{this.item}}')" class="btn btn-primary">Add to Cart</button>
              <button onclick="remove('{{this.item}}')" class="btn btn-danger" style="margin-left: 5px;">Remove</button> 
            </div>
          </div>
        </div>
         {{/each}}
        </div>
      </div>
  </section>